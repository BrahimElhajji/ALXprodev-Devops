#!/bin/bash

# Output CSV file
output_file="pokemon_report.csv"

# Header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Process each JSON file
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")
    
    # Convert decimeters to meters, hectograms to kilograms
    height_m=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight / 10 }")

    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

# Print report location
echo "CSV Report generated at: $output_file"
echo

# Display the CSV content
cat "$output_file"

echo

# Calculate averages using awk (skip header with NR > 1)
awk -F, 'NR > 1 { h+=$2; w+=$3; count++ } END {
    if (count > 0) {
        printf "Average Height: %.2f m\n", h / count;
        printf "Average Weight: %.2f kg\n", w / count;
    }
}' "$output_file"


