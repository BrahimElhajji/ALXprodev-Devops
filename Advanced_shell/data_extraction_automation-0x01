#!/bin/bash

# check if data.json exists
if [ ! -f "data.json" ]; then
  echo "data.json not found. Please run the API script first."
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height (decimeters to meters) and weight (hectograms to kg)
height_m=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
weight_kg=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Capitalize first letter of name and type
name_cap=$(echo "$name" | sed 's/.*/\u&/')
type_cap=$(echo "$type" | sed 's/.*/\u&/')

# Final output
echo $name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall.
